<div class="col-md-4 offset-md-4">
    <form action="/auth/" method="POST" autocomplete="off">
    <ul class="list-unstyled">
        {{#each errors}}
            <li>
                <div class="alert"> 
                    {{this.msg}}
                </div>
            </li>
        {{/each}}
    </ul>
    <div class="row">
        <div class="form-group col-md-7">
            <label for="loginUsername">Username</label>
            <input type="text" id="loginUsername" name="loginUsername" placeholder="Your username" {{disabled}} required>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-7">
            <label for="loginPassword">Password</label>
            <input type="password" id="loginPassword" name="loginPassword" placeholder="Your password" {{disabled}} required>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success" {{error.disabled}}><i class="fa fa-sign-in"></i> Log In</button>
        <a class="btn btn-secondary" href="/auth/register"><i class="fa fa-user"></i> Register</a>
    </div>
</form>
</div>
