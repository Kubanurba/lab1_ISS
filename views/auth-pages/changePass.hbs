<div class="col-md-4 offset-md-4">
    <form action="/auth/change" method="POST" autocomplete="off">
        <ul class="list-unstyled">
        {{#each errors}}
            <li><div class="alert">{{this.msg}}</div></li>
        {{/each}}
        </ul>
<input type="hidden" name="id" value="{{user.id}}">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="registerUsername">Username</label>
            <input type="text" id="registerUsername" name="registerUsername" placeholder="Your Username" value="{{user.name}}" disabled>
        </div>
    </div>
        <div class="row">
        <div class="form-group col-md-6">
                <label for="oldPassword">Old Password</label>
                <input type="password" id="oldPassword" name="oldPassword" placeholder="Your old password" required>
            </div>
        </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="registerPassword">New Password</label>
            <input type="password" id="registerPassword" name="registerPassword" placeholder="Your password" required>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
           <label for="confirmPassword">Confirm your password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Your password" required> 
        </div>
    </div>
    <div class="form-group col-md-6">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Submit</button>
    </div>
</form>
</div>